# Google Gemini API 設定
GEMINI_API_KEY=your_api_key_here

# Gemini API 速率限制設定（針對免費版優化）
# 免費版限制：每分鐘 15 次請求
GEMINI_REQUEST_DELAY=4000          # 每次請求間隔（毫秒），預設 4000ms (4秒)
GEMINI_MAX_RETRIES=3                # 遇到 429 錯誤時的最大重試次數
GEMINI_RETRY_DELAY=5000             # 重試基礎延遲（毫秒），使用指數退避

# 伺服器設定
PORT=3000
NODE_ENV=development

# CORS 設定（允許的前端網址，生產環境請設定實際網址）
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API 速率限制（每 15 分鐘最多請求次數）
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
